---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { buttonVariants } from "@/components/ui/button";
import { House } from "lucide-react";
---

<BaseLayout
    title="ページが見つかりませんでした"
    description="ページが見つかりませんでした。お探しのページは存在しないか、削除された可能性があります。"
>
    <div class="container py-10">
        <p class="leading-none sm:text-lg">404</p>
        <h1 class="mt-1 text-xl sm:text-2xl font-bold leading-[1.4]">ページが見つかりませんでした</h1>
        <p class="mt-8 leading-[1.7]">お探しのページは存在しないか、削除された可能性があります。</p>
        <div class="mt-8 max-sm:grid">
            <a href="/" class={buttonVariants()}><House />ホームに戻る</a>
        </div>
    </div>
</BaseLayout>
